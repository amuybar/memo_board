<!-- views/signupForm.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Login</title>
<style>
    .card {
      justify-self: center;
      margin: auto;
        background-color: rgba(0, 0, 0, 0.4); 
        border-radius: 8px;
        color: white;
        padding: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.7); 
    }

    form {
        margin-top: 30px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="password"] ,
    input[type="email"]{
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 6px;
        box-sizing: border-box;
    }

    button[type="submit"] {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    button[type="submit"]:hover {
        background-color: #0056b3;
    }
</style>
</head>

<body>
    <div class="card"style="width: 400px;">
        <h2>Signup</h2>
        <form action="/signup" method="post" onsubmit="submitSignupForm(event)" >
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required autofocus autocomplete="username"><br><br>
            
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required><br><br>
            <button type="submit">Signup</button>
        </form>
    </div>
    <script>
        function submitSignupForm(event) {
            event.preventDefault(); 
            // Get form data
            const formData = new FormData(document.getElementById('signupForm'));

            // Send form data to the backend using Fetch API
            fetch('/signup', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (response.ok) {
                    // Handle successful form submission
                    console.log('Signup successful!');
                    // You can redirect the user or show a success message here
                } else {
                    // Handle error response from the server
                    console.error('Error submitting signup form:', response.statusText);
                    // You can display an error message to the user here
                }
            })
            .catch(error => {
                // Handle network errors or other exceptions
                console.error('Error submitting signup form:', error);
                // You can display an error message to the user here
            });
        }
    </script>
</body>

</html>
